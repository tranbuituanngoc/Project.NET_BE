@model project.NETMVC.Models.Blog

@{
    ViewData["Title"] = "Thêm Tin Tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-inner">
    <div class="page-header">
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-angle-right"></i>
            </li>
            <li class="nav-item">
                <a asp-area="Admin" asp-controller="AdminBlogs" asp-action="Index">Danh sách tin tức</a>
            </li>
        </ul>
    </div>


    @* entype to upload file with condition *@
    <form asp-controller="AdminBlogs" asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="page-inner">
            <div class="col-md-12">
                <div class="" page-header no-gutters has-tab">
                    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                        <div class="m-b-15" style="position: absolute;top: 0px;right: 10px;">
                            <button class="btn btn-primary" type="submit">
                                <i class="anticon anticon-save"></i>
                                <span>Save</span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông Tin Cơ Bản</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô Tả</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="product-edit-basic">
                    <div class="card">
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label class="font-weight-semibold" for="productName">Tên tin tức</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label class="font-weight-semibold" for="productPrice">Tác giả</label>
                                    <input type="text" class="form-control" asp-for="Author">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
                                <input name="fThumb" type="file" class="form-control-file" asp-for="Image" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="m-t-25">
                                    <div class="form-group d-flex align-items-center">
                                        <div class="switch m-r-10">
                                            <input type="checkbox" asp-for="IsHot" checked="">
                                            <label for="IsHot"></label>
                                        </div>
                                        <label>IsHot</label>
                                    </div>
                                    <div class="form-group d-flex align-items-center">
                                        <div class="switch m-r-10">
                                            <input type="checkbox" asp-for="IsNewfeed">
                                            <label for="IsNewfeed"></label>
                                        </div>
                                        <label>IsNewfeed</label>
                                    </div>
                                    <div class="form-group d-flex align-items-center">
                                        <div class="switch m-r-10">
                                            <input type="checkbox" asp-for="Published">
                                            <label for="Published"></label>
                                        </div>
                                        <label>Public</label>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                @*<div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Title</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                            <label class="font-weight-semibold" for="productColors">MetaDesc</label>
                            <input type="text" class="form-control" asp-for="MetaDesc">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productFit">MetaKey</label>
                            <input type="text" class="form-control" asp-for="MetaKey">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productFit">Tags</label>
                            <input type="text" class="form-control" asp-for="Tags">
                        </div>
                </div>
            </div>
        </div>*@
                <div class="tab-pane fade" id="product-edit-description">
                    <div class="card">
                        <div class="card-body">
                            <label class="font-weight-semibold" for="descrip">Nội dung tin tức:</label>
                            <textarea class="summernote" asp-for="Contents" style="width:100%;min-height:300px;"></textarea>
                            <div id="summernote"></div>
                            <script>
                                $('#summernote').summernote({
                                    tabsize: 2,
                                    height: 100
                                });
                            </script>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>

@section Scripts{
