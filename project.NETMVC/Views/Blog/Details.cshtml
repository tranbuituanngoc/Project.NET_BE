<!-- Latest Blog Section Begin -->
<section class="latest">
    @if (Baivietlienquan != null && Baivietlienquan.Count() > 0)
    {

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Tin gần đây</span>
                        <h2>Bài viết liên quan</h2>
                    </div>
                </div>
            </div>
            <div class="row">
               @foreach (var item in Baivietlienquan)
                {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="/images/blogs/@item.Image"></div>
                        <div class="blog__item__text">
                            <span><img src="/assets/img/icon/calendar.png" alt="">@item.CreateDate</span>
                            <h5>@item.Title</h5>
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">Đọc thêm</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    }
</section>
