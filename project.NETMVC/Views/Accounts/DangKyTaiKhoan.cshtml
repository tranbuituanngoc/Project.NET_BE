@model project.NETMVC.ModelViews.RegisterVM

@{
    ViewData["Title"] = "DangKyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Đăng ký</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Trang chủ</a>
                        <span>Đăng ký</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Register Section Begin -->
<div class="login">
    <div class="l-container">
        <div class="grid">
            <div class="section-title">
                <div class="l-title">Đăng Ký</div>
            </div>
            <form asp-action="DangKyTaiKhoan" method="post" class="form-login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="l-content">Tên đầy đủ <span>*</span></div>
                <input asp-for="FullName" type="text" class="f-control" placeholder="Nhập tên">
                <span asp-validation-for="FullName" class="text-danger"></span>
                <div class="l-content">Số điện thoại <span>*</span></div>
                <input asp-for="Phone" type="text" class="f-control" placeholder="Nhập số điện thoại">
                <span asp-validation-for="Phone" class="text-danger"></span>
                <div class="l-content">Email <span>*</span></div>
                <input asp-for="Email" type="email" class="f-control" placeholder="Nhập email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="l-content">Mật khẩu <span>*</span></div>
                <input asp-for="Password" type="password" class="f-control" placeholder="Nhập mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="l-content">Xác nhận mật khẩu <span>*</span></div>
                <input asp-for="ConfirmPassword" type="password" class="f-control" placeholder="Xác nhận mật khẩu">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <button type="submit" class="l-btn">
                    <span class="l-text">Đăng ký</span>
                </button>
            </form>
            <div class="text-center">
                <div class="l-content">
                    <a href="login.html" class="content-text">
                        <i class="fa-solid fa-user"></i> Đăng nhập
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Register Section End -->
