@model project.NETMVC.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Đăng nhập</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Trang chủ</a>
                        <span>Đăng nhập</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Register Section Begin -->
<div class="login">
    <div class="l-container">
        <div class="grid">
            <div class="section-title">
                <div class="l-title">Đăng Nhập</div>
            </div>
            <form asp-action="Login" method="post" class="form-login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="l-content">Email <span>*</span></div>
                <input asp-for="Username" type="email" class="f-control" placeholder="Nhập email">
                <span asp-validation-for="Username" class="text-danger"></span>
                <div class="l-content">Mật khẩu <span>*</span></div>
                <input asp-for="Password" type="password" class="f-control" placeholder="Nhập mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
                <button type="submit" class="l-btn">
                    <span class="l-text">Đăng nhập</span>
                </button>
            </form>
            <div class="text-center">
                <div class="l-content">
                    <a href="forgot-pw.html" class="content-text">
                        <i class="fa-solid fa-key"></i> Quên mật khẩu?
                    </a>
                </div>
                <div class="l-content">
                    <a href="register.html" class="content-text">
                        <i class="fa-solid fa-user-plus"></i> Tạo tài khoản
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>